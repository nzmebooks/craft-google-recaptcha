{{ div|raw }}
<script type="text/javascript" {% if nonce ?? null %}nonce="{{ nonce }}"{% endif %}>
    var {{ callbackName }} = function() {
        var widgetId = grecaptcha.render("{{ id }}", {
            sitekey: "{{ siteKey }}",
            size: "{{ size }}",
            theme: "{{ theme }}",
            badge: "{{ badge }}"
        });
        {% if size == 'invisible' %}grecaptcha.execute(widgetId);{% endif %}
    };
    {% if instantRender %}
    {{ callbackName }}();
    {% endif %}
</script>
<script {% if nonce ?? null %}nonce="{{ nonce }}"{% endif %} src="https://www.google.com/recaptcha/api.js?onload={{ callbackName }}&render=explicit&hl={{ craft.app.sites.currentSite.language }}" async defer></script>
