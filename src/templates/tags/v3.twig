{{ hiddenInput|raw }}
<script src="https://www.google.com/recaptcha/api.js?render={{ siteKey }}"></script>
<script {% if nonce ?? null %}nonce="{{ nonce }}"{% endif %}>
    grecaptcha.ready(function() {
        grecaptcha.execute("{{ siteKey }}", {
            action: "{{ action }}"
        }).then(function(token) {
            document.getElementById("{{ id }}").value = token;
        });
    });
</script>
